{
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "python.formatting.provider": "black",
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "googletest.failed",
        "settings": {
          "foreground": "#f00"
        }
      },
      {
        "scope": "googletest.passed",
        "settings": {
          "foreground": "#0f0"
        }
      },
      {
        "scope": "googletest.run",
        "settings": {
          "foreground": "#0f0"
        }
      }
    ]
  }
}